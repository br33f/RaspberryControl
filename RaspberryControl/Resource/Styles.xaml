<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RaspberryControl.Resource">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"></SolidColorBrush>
    <SolidColorBrush x:Key="AppHeadingBrush" Color="{StaticResource Red}"></SolidColorBrush>
    <SolidColorBrush x:Key="ScreenHeadingBrush" Color="{StaticResource NavyBlue}"></SolidColorBrush>

    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource Blue}"></SolidColorBrush>
    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource BackgroundDarker}"></SolidColorBrush>
    <SolidColorBrush x:Key="ActiveBrush" Color="{StaticResource Blue}"></SolidColorBrush>

    <SolidColorBrush x:Key="LabelBrush" Color="{StaticResource BackgroundDarkest}"></SolidColorBrush>

    <FontFamily x:Key="ThinFont">Segoe UI Light</FontFamily>
    <FontFamily x:Key="FontAwesome">/Assets/Fonts/fontawesome-webfont.ttf#FontAwesome</FontFamily>

    <x:Double x:Key="AppTitleFontSize">48</x:Double>
    <x:Double x:Key="ScreenTitleFontSize">24</x:Double>
    <x:Double x:Key="LabelFontSize">20</x:Double>



</ResourceDictionary>
